{
  "expo": {
    "name": "safestep",
    "slug": "safestep",
    "version": "1.0.0",
    "orientation": "portrait",
    "main": "expo-router/entry",
    "icon": "./src/assets/images/icon.png",
    "scheme": "mobileapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": { 
        "UIBackgroundModes": [
          ["location", "fetch", "remote-notification" ]
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./src/assets/images/android-icon-foreground.png",
        "backgroundImage": "./src/assets/images/android-icon-background.png",
        "monochromeImage": "./src/assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions" : [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./src/assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Your app needs access to your location to provide guidance and track safety steps.", 
          "locationAlwaysAndWhenInUsePermission": "Your app uses your location to monitor movement for safety alerts even when the app is closed or not in use.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ]

    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "root": "./src/app"
      },
      "eas": {
        "projectId": "52f54e68-fac2-4b71-9293-077e1d172f46"
      }
    },
    "owner": "v58-tier3-team-31"
  }
}
 