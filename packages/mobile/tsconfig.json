{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // "useUnknownInCatchVariables": false,
    "isolatedModules": true, // Good to enforce monorepo safety
    "noUncheckedIndexedAccess": true, // Stricter array access
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": ["../../packages/shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "babel.config.js"  ]
}
