{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "resolvePlatformSpecificFiles": true,
    // "useUnknownInCatchVariables": false,
    "isolatedModules": true, // Good to enforce monorepo safety
    "noUncheckedIndexedAccess": true, // Stricter array access
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@shared/*": ["../../packages/shared/*"],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts", 
    "babel.config.js",
    "nativewind-env.d.ts"
  ]
}